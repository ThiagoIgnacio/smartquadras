<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.internet.smartquadras.CadastroActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/menu_icon" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText"
        android:textColorHint="#000000"
        android:autoText="true"
        android:elegantTextHeight="false"
        android:hint="Email"
        android:textAlignment="center"
        android:text="Email"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText2"
        android:textColorHint="#000000"
        android:autoText="true"
        android:elegantTextHeight="false"
        android:hint="Email"
        android:textAlignment="center"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:text="Confirme o Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText3"
        android:textColorHint="#000000"
        android:autoText="true"
        android:elegantTextHeight="false"
        android:hint="Email"
        android:textAlignment="center"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:text="Senha" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText4"
        android:textColorHint="#000000"
        android:autoText="true"
        android:elegantTextHeight="false"
        android:hint="Email"
        android:textAlignment="center"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:text="Confirme a Senha" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lembrar "
        android:id="@+id/checkBox"
        android:checked="true"
        android:layout_marginRight="10dp"
        android:focusable="false"
        android:enabled="true"
        android:background="#ffffff"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignStart="@+id/editText4" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Cadastrar"
        android:id="@+id/button2"
        android:background="@drawable/entrar_cadastrar"
        android:textColor="#ffffff"
        android:layout_below="@+id/editText4"
        android:layout_alignEnd="@+id/editText4"
        android:layout_marginTop="34dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton3"
        android:layout_gravity="left|top"
        android:src="@drawable/voltar_icon"
        android:background="#00ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
